//@version=5
indicator("Blue Alerts", overlay=true)
activate_alert3 = input(false, "", inline = "1")
pair4 = input("AUDUSD", title="", inline = "1")
price3_above = input(0.0, title="⬆️", inline = "1")
price3_below = input(0.0, title="⬇️", inline = "1")
activate_alert1 = input(false, "", inline = "2")
pair1 = input("EURUSD", title="", inline = "2")
price1_above = input(0.0, title="⬆️", inline = "2")
price1_below = input(0.0, title="⬇️", inline = "2")
activate_alert2 = input(false, "", inline = "3")
pair2 = input("GBPUSD", title="", inline = "3")
price2_above = input(0.0, title="⬆️", inline = "3")
price2_below = input(0.0, title="⬇️", inline = "3")
activate_alert4 = input(false, "", inline = "4")
pair5 = input("USDCAD", title="", inline = "4")
price4_above = input(0.0, title="⬆️", inline = "4")
price4_below = input(0.0, title="⬇️", inline = "4")
activate_alert5 = input(false, "", inline = "5")
pair6 = input("USDCHF", title="", inline = "5")
price5_above = input(0.0, title="⬆️", inline = "5")
price5_below = input(0.0, title="⬇️", inline = "5")
activate_alert6 = input(false, "", inline = "6")
pair3 = input("USDJPY", title="", inline = "6")
price6_above = input(0.0, title="⬆️", inline = "6")
price6_below = input(0.0, title="⬇️", inline = "6")
checkAlert(pair, price_above, price_below, label, activate_alert) =>
    conditionAbove = close > price_above
    conditionBelow = close < price_below
    if (activate_alert and (conditionAbove or conditionBelow))
        alert("Alert " + str.tostring(label) + ": " + str.tostring(pair) + " activada")
checkAlert(pair1, request.security(pair1, "D", close), request.security(pair1, "D", close), "1", activate_alert1)
checkAlert(pair2, request.security(pair2, "D", close), request.security(pair2, "D", close), "2", activate_alert2)
checkAlert(pair3, request.security(pair3, "D", close), request.security(pair3, "D", close), "3", activate_alert3)
checkAlert(pair4, request.security(pair4, "D", close), request.security(pair4, "D", close), "4", activate_alert4)
checkAlert(pair5, request.security(pair5, "D", close), request.security(pair5, "D", close), "5", activate_alert5)
checkAlert(pair6, request.security(pair6, "D", close), request.security(pair6, "D", close), "6", activate_alert6)
